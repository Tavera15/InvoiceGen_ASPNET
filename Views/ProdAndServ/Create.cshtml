@using InvoiceGen_ASPNET.Models
@model ProductsAndServicesModel

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Create Product or Service</title>
</head>
<body>
    <h1>Create a Product or Service</h1>

    @using (Html.BeginForm("Create", "ProdAndServ", FormMethod.Post))
    {
        <p>@Html.LabelFor(ps => ps.mName)</p>
        @Html.TextBoxFor(ps => ps.mName)

        <p>@Html.LabelFor(ps => ps.mPrice)</p>
        @Html.TextBoxFor(ps => ps.mPrice)

        <button type="submit">Submit</button>
    }

</body>
</html>